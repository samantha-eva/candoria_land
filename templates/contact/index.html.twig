{% extends 'base.html.twig' %}

{% block title %}Boutique{% endblock %}
{% block body %}

<div class="big-metro-site-container">
    <header>
        <div class="contain-shop">
            <h1 class="main_header_text">Contact</h1>
            <div class="our-site-link">
                <a href="">Accueil</a>
                <i class="fa-solid fa-chevron-right"></i>
                <p>Boutique</p>
            </div>
        </div>
    </header>


    <section class="contact-form">
        <h1>Nous contactez</h1>
        <div class="container">
            <form method="post" action="{{ path('app_contact') }}">
                <div class="form-group">
                    <label for="email">Adresse Email</label>
                    <input type="email" id="email" name="email" value="{{ app.request.get('email', '') }}" required>
                </div>
                <div class="form-group">
                    <label for="subject">Sujet</label>
                    <input type="text" id="subject" name="subject" value="{{ app.request.get('subject', '') }}" required>
                </div>
                <div class="form-group">
                    <label for="message">Commentaire</label>
                    <textarea id="message" name="message" rows="4" required>{{ app.request.get('message', '') }}</textarea>
                </div>
                <button type="submit">Envoyer</button>
            </form>
        </div>
    </section>


</div>
{% endblock %}
