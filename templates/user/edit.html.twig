{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}
{% block body %}

<div class="big-metro-site-container">
    <header class="header_new">
        <div class="contain-new">
            <h1 class="main_header_text">Informations utilisateurs</h1>
            <div class="our-site-link">
                <a href="">Informations</a>
                <i class="fa-solid fa-chevron-right"></i>
                <a href="{{ path('app_historique', {'id': app.user.id}) }}"><p>Histoirique de commandes</p></a>
            </div>
        </div>
    </header>
</div>

<div class="container">
    <h1> formulaire edition user</h1>
    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning mt-4">
            {{ message }}
        </div>
    {% endfor %}

    {{form_start(form) }}
        {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
       
        <button type="submit" class="btn">Modifier</button>
    {{ form_end(form) }}
</div>
{% endblock %}
