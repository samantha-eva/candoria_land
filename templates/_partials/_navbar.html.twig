<header class="header">
    <section class="flex">
        <a href="{{ path('app_home') }}" class="logo" aria-label="Accueil">
            <img src="{{ asset('assets/images/logo2.png') }}" alt="Logo du site" width="130px">
        </a>
        <nav>
            <ul class="menu">
                <li><a href="#" title="Accueil">Accueil</a></li>
                <li><a href="#" title="Bonbons">Bonbons</a></li>
                <li><a href="#" title="Célébrations">Célébrations</a></li>
                <li><a href="#" title="Nouveautés">Nouveautés</a></li>
                <li><a href="#" title="Contact">Contact</a></li>
            </ul>
        </nav>
        <form action="/search" method="post" class="search-form" aria-label="Rechercher des bonbons">
            <input type="text" name="search" placeholder="Rechercher..." required maxlength="100">
            <button type="submit" id="search_bonbon_btn" aria-label="Rechercher">
                <ion-icon name="search-outline"></ion-icon>
            </button>
        </form>
        <div class="icons">
            <ion-icon name="menu-outline" class="hamburger" aria-label="Menu"></ion-icon>
            <a href="#" aria-label="Favoris"><ion-icon name="heart-outline"></ion-icon><sup>0</sup></a>
            <a href="#" aria-label="Panier"><ion-icon name="cart-outline"></ion-icon><sup>0</sup></a>
            
            {% if app.user %}
                <div class="profile-card">
                    <a href="{{ path('app_profile', {'id': app.user.id})}}" aria-label="Voir le profil">
                        <span>{{ app.user.username }}</span> <!-- Display the username -->
                    </a>
                    <a href="{{ path('app_logout') }}" aria-label="Se déconnecter">
                        <ion-icon name="log-out-outline"></ion-icon>
                    </a>
                </div>
            {% else %}
                <a href="{{ path('app_login') }}" aria-label="Compte">
                    <ion-icon name="person-outline" aria-label="Compte"></ion-icon>
                </a>
            {% endif %}
        </div>
    </section>
</header>
